<?xml version="1.0" encoding="UTF-8"?>

<Config>   
         
   <!-- ============================================================ -->
   <!-- 设计：存储服务处理                                           -->
   <!-- ============================================================ -->
   <WebServlet
         name  = 'cloud.storage'
         face  = 'org.mo.cloud.storage.face.storage.IStorageServlet'/>

   <Component
         face  = 'org.mo.cloud.storage.face.storage.IStorageServlet'
         class = 'org.mo.cloud.storage.face.storage.FStorageServlet'
         scope = 'global'/>

   <!-- ============================================================ -->
   <!-- 设计：资源上传处理                                           -->
   <!-- ============================================================ -->
   <WebServlet
         name  = 'cloud.resource.upload'
         face  = 'org.mo.cloud.storage.face.resource.IUploadServlet'/>

   <Component
         face  = 'org.mo.cloud.storage.face.resource.IUploadServlet'
         class = 'org.mo.cloud.storage.face.resource.FUploadServlet'
         scope = 'global'/>

</Config>
