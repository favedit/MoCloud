<?xml version="1.0" encoding="UTF-8"?>

<Configuration>
   <!-- 应用定义 -->
   <Define name='application'>${application}</Define>
   <Define name='application.name'>eai.storage</Define>
   <Define name='application.root'>${application}/${application.name}</Define>
   <Define name='application.deploy'>${application}/deploy</Define>
   <Define name='application.web'>${application.root}/webroot</Define>
   <Define name='application.config'>${application.web}/WEB-INF/classes</Define>
   <Define name='application.space'>${application.web}/WEB-INF/config</Define>
   <Define name='application.content'>${application.web}/WEB-INF/content</Define>
   <Define name='application.temp'>${application}/mt-temp/${application.name}</Define>
   <Define name='application.storage'>/data/eai/storage</Define>

   <!-- 服务器设定 -->
   <Define name='cloud.eai.server.content'>http://localhost:8010</Define>
   <Define name='cloud.eai.server.service'>http://localhost:8020</Define>
   <Define name='cloud.eai.server.storage'>http://localhost:8030</Define>
   <Define name='cloud.eai.server.manage'>http://localhost:8040</Define>
   <Define name='cloud.eai.server.logger'>http://localhost:8090</Define>

   <!-- 应用设定 -->
   <Include>${application.config}/application.xml</Include>

   <!-- 包含：环境设定 -->
   <Include>${application.config}/environment/environment-test.xml</Include>

</Configuration>
