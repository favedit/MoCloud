<?xml version="1.0" encoding="UTF-8"?>

<Config>
   
   <!-- ==================================================== -->
   <!-- ContentConfigurationConsole:内容配置控制台           -->
   <!--  P:config_path - 配置文件路径                        -->
   <!--  I:initializeConfig - 增加配置信息                   -->
   <!-- ==================================================== -->
   <Component
         face  = 'org.mo.cloud.design.core.configuration.IContentConfigurationConsole'
         class = 'org.mo.cloud.design.core.configuration.FContentConfigurationConsole'
         scope = 'global'>
      <Property name='config_path'>${application.content}</Property>
      <Initialize name='initializeConfig'/>
   </Component>
   
   <!-- ==================================================== -->
   <!-- ContentPersistenceConsole:内容持久化制台             -->
   <!-- ==================================================== -->
   <Component
         face  = 'org.mo.cloud.design.core.persistence.IContentPersistenceConsole'
         class = 'org.mo.cloud.design.core.persistence.FContentPersistenceConsole'
         scope = 'global'>
   </Component>
   
   <!-- ==================================================== -->
   <!-- ContentListConsole:内容列表控制台                    -->
   <!--  P:space_name - 空间名称                             -->
   <!--  P:path_name - 保存路径                              -->
   <!-- ==================================================== -->
   <Component
         face  = 'org.mo.cloud.design.core.list.IContentListConsole'
         class = 'org.mo.cloud.design.core.list.FContentListConsole'
         scope = 'global'>
      <Property name='space_name'>content.list</Property>
      <Property name='path_name'>design.list</Property>
   </Component>
   
   <!-- ==================================================== -->
   <!-- TreeConsole:目录列表控制台                           -->
   <!--  P:space_name - 空间名称                             -->
   <!--  P:path_name - 保存路径                              -->
   <!-- ==================================================== -->
   <Component
         face  = 'org.mo.cloud.design.core.tree.ITreeConsole'
         class = 'org.mo.cloud.design.core.tree.FTreeConsolee'
         scope = 'global'>
      <Property name='space_name'>content.tree</Property>
      <Property name='path_name'>design.tree</Property>
   </Component>

   <!-- ==================================================== -->
   <!-- ContentFormConsole:内容表单控制台                    -->
   <!--  P:space_name - 空间名称                             -->
   <!--  P:path_name - 保存路径                              -->
   <!-- ==================================================== -->
   <Component
         face  = 'org.mo.cloud.design.core.frame.IContentFormConsole'
         class = 'org.mo.cloud.design.core.frame.FContentFormConsole'
         scope = 'global'>
      <Property name='space_name'>content.frame</Property>
      <Property name='path_name'>design.frame</Property>
   </Component>

</Config>
