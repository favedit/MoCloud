<?xml version="1.0" encoding="UTF-8"?>

<Config>

   <!-- ==================================================== -->
   <!-- 命令：应用程序共通组件定义                           -->
   <!--    Action = apl/*                                    -->
   <!-- ==================================================== -->
   <Actions
         uri   = '/apl/*/*'
         face  = 'org.mo.cloud.design.face.apl.*.I*Action'/>

   <Actions
         uri   = '/apl/*'
         face  = 'org.mo.cloud.design.face.apl.I*Action' />

   <Components
         face  = 'org.mo.cloud.design.face.apl.*.I*Action'
         class = 'org.mo.cloud.design.face.apl.*.F*Action' />

   <Components
         face  = 'org.mo.cloud.design.face.apl.I*Action'
         class = 'org.mo.cloud.design.face.apl.F*Action' />

   <!-- ==================================================== -->
   <!-- 命令：内容的命令映射和组件定义                       -->
   <!--    Action = content/*                                -->
   <!-- ==================================================== -->
   <Actions
         uri   = '/design/*/*'
         face  = 'org.mo.cloud.design.face.*.I*Action'/>

   <Components
         face  = 'org.mo.cloud.design.face.*.I*Action'
         class = 'org.mo.cloud.design.face.*.F*Action' />

   <Actions
         uri   = '/design/*'
         face  = 'org.mo.cloud.design.face.I*Action' />

   <Components
         face  = 'org.mo.cloud.design.face.I*Action'
         class = 'org.mo.cloud.design.face.F*Action' />

   <!-- ==================================================== -->
   <!-- 命令：内容的命令映射和组件定义                       -->
   <!--    Action = content/*                                -->
   <!-- ==================================================== -->
   <Actions
         uri   = '/system/*/*'
         face  = 'org.mo.cloud.system.face.*.I*Action'/>

   <Components
         face  = 'org.mo.cloud.system.face.*.I*Action'
         class = 'org.mo.cloud.system.face.*.F*Action' />

   <Actions
         uri   = '/system/*'
         face  = 'org.mo.cloud.system.face.I*Action' />

   <Components
         face  = 'org.mo.cloud.system.face.I*Action'
         class = 'org.mo.cloud.system.face.F*Action' />

   <!-- ==================================================== -->
   <!-- 命令：默认的命令映射和组件定义                       -->
   <!--    Action = *                                        -->
   <!-- ==================================================== -->
   <Actions
         uri   = '*'
         face  = 'org.mo.cloud.design.face.I*Action' />
         
</Config>
