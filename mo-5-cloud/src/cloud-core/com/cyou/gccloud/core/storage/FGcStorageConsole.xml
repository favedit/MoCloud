<Config>
   <!-- 逻辑-国家-图标 定义 -->
   <ImageProcess name='common.country|icon'>
      <Image device='Pc'  quality='All' display='ThumbList' action='S' width='64'  height='64'  round='0'/>
      <Image device='Pc'  quality='All' display='All'       action='S' width='100' height='100' round='0'/>
      <Image device='All' quality='All' display='List'      action='S' width='100' height='100' round='0'/>
