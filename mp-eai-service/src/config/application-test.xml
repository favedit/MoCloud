<?xml version="1.0" encoding="UTF-8"?>

<Configuration>

   <!-- 应用定义 -->
   <Define name='application'>${application}</Define>
   <Define name='application.name'>eai.service</Define>
   <Define name='application.root'>${application}/${application.name}</Define>
   <Define name='application.deploy'>${application}/deploy</Define>
   <Define name='application.web'>${application.root}/webroot</Define>
   <Define name='application.config'>${application.web}/WEB-INF/classes</Define>
   <Define name='application.space'>${application.web}/WEB-INF/config</Define>
   <Define name='application.content'>${application.web}/WEB-INF/content</Define>
   <Define name='application.temp'>${application}/mt-temp/${application.name}</Define>
   <Define name='application.storage'>${application}/mt-storage</Define>

   <!-- 内容服务器 -->
   <Define name='eai.host.content'>http://test.eai.ezubo.com/</Define>
   <!-- 接口服务器 -->
   <Define name='eai.server.host'>http://service.test.eai.ezubo.com/</Define>
   <!-- OA登录服务器 -->
   <Define name='eai.oa.enable'>Y</Define>
   <Define name='eai.oa.host'>http://115.182.232.150:8181/oauser</Define>
   <!-- 存储服务器 -->
   <Define name='cloud.server.storage.enable'>Y</Define>
   <Define name='cloud.server.storage.process'>http://localhost:8030/cloud.storage.process.wv</Define>
   <Define name='cloud.server.storage.access'>http://storage.test.eai.ezubo.com/storage</Define>
   <Define name='cloud.server.storage.picture'>http://storage.test.eai.ezubo.com/cloud.storage.picture.wv</Define>
   <!-- 服务器设定 -->
   <Define name='cloud.server.logger.enable'>Y</Define>
   <Define name='cloud.server.logger.publish'>http://localhost:8090/eai.logger.publish.ws</Define>

   <!-- 应用设定 -->
   <Include>${application.config}/application.xml</Include>

   <!-- 环境设定 -->
   <Include>${application.config}/environment/environment-test.xml</Include>
   <Include>${application}/eai.config/environment.xml</Include>

</Configuration>
